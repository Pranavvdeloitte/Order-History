        <t:Table
            id="idOrderHistoryTable"
            rows="{localDataModel>/}"
            selectionMode="None"
            ariaLabelledBy="title"
            alternateRowColors="true"
            visibleRowCount="20" rowActionCount="1"
        >
            <t:rowActionTemplate>
                <t:RowAction>
                    <t:items>
                        <t:RowActionItem
                            type="Navigation"
                            press="onRowNavigation"
                        />
                    </t:items>
                </t:RowAction>
            </t:rowActionTemplate>
            <t:columns>
                <t:Column autoResizable="true">
                    <m:Label text="ASN Number" />
                    <t:template>
                        <m:Text
                            text="{localDataModel>ASN Number}"
                            wrapping="false"
                        />
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <m:Label text="Invoice Number" />
                    <t:template>
                        <m:Text
                            text="{localDataModel>Invoice Number}"
                            wrapping="false"
                        />
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <m:Label text="PO" />
                    <t:template>
                        <m:Text
                            text="{localDataModel>PO}"
                            wrapping="false"
                        />
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <m:Label text="ASN Status" />
