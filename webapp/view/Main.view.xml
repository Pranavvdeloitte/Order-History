                        <m:Text
                            text="{localDataModel>GRN}"
                            wrapping="false"
                        />
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <m:Label text="GRN Status" />
                    <t:template>
                        <m:Text
                            text="{localDataModel>GRN Status}"
                            wrapping="false"
                        />
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <m:Label text="MIRO" />
                    <t:template>
                        <m:Text
                            text="{localDataModel>MIRO}"
                            wrapping="false"
                        />
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <m:Label text="Base Price" />
                    <t:template>
