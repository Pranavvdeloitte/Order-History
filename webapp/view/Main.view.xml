                <fb:FilterGroupItem
                    name="C"
                    label="PO"
                    groupName="Group1"
                    visibleInFilterBar="true"
                >
                    <fb:control>
                        <Input id="idPo" />
                    </fb:control>
                </fb:FilterGroupItem>
                <fb:FilterGroupItem
                    name="D"
                    label="ASN Status"
                    groupName="Group1"
                    visibleInFilterBar="true"
                >
                    <fb:control>
                        <Input id="idAsnStatus" />
                    </fb:control>
                </fb:FilterGroupItem>
